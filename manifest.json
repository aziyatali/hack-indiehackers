{
  "manifest_version": 3,
  "name": "Hack Indie Hackers",
  "version": "1.0",
  "description": "Automatically removes annoying popups from websites",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
